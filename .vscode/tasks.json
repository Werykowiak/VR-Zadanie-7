{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/EHsc",
                "/I", "${workspaceFolder}\\include", // Folder z nagłówkami glad i glfw
                "${workspaceFolder}\\src\\main.cpp", // Plik główny
                "${workspaceFolder}\\src\\gl.c", // Dodaj glad.c
                "/link",
                "/OUT:${workspaceFolder}\\out\\program.exe",
                "/LIBPATH:C:/mylibs/glfw/lib", // Ścieżka do folderu z bibliotekami GLFW
                "opengl32.lib", // Link do biblioteki OpenGL
                "glfw3.lib", // Link do biblioteki GLFW
                "gdi32.lib", // Link do biblioteki GDI
                "user32.lib", // Link do biblioteki User
                "msvcrt.lib", // Link do standardowej biblioteki C
                "shell32.lib" // Link do biblioteki Shell
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}